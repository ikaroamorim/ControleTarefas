@model ControleTarefas.Classes.Tarefa

@{
  ViewData["Title"] = "AddTarefaForm";
}

<h1>AddTarefaForm </h1>

<h4>Tarefa</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form action="/Tarefa/Cadastrar" method="POST">
      <div class="text-danger"></div>
      <div class="form-group">
        <label for="alunoId" class="control-label">Aluno</label>
        <select name="alunoId" id="AlunoId">
          @foreach (var aluno in ViewBag.Alunos)
          {
            <option value=@aluno.Id>@aluno.Nome</option>
          }
        </select>
      </div>
      <div class="form-group">
        <label for="tarefa" class="control-label">Tarefa</label>
        <input name="tarefa" id="tarefa" class="form-control" />
      </div>
      <div class="form-group">
        <label for="materia" class="control-label">Matéria</label>
        <input name="materia" id="materia" class="form-control" />
      </div>
      <div class="form-group">
        <label for="prazo" class="control-label">Prazo de Entrega</label>
        <input type="date" name="prazo" id="prazo" class="form-control" />
      </div>
      <div class="form-group">
        <label for="entrega" class="control-label">Data de Entrega</label>
        <input type="date" name="entrega" id="entrega" class="form-control" />
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<a href="/" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Voltar para Home!</a>


